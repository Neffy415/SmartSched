        }

        .smart-schedule-more a:hover {
            color: white;
            text-decoration: underline;
        }

        .smart-schedule-empty {
            text-align: center;
            padding: var(--spacing-xl);
        }

        .smart-schedule-empty svg {
            width: 48px;
            height: 48px;
            opacity: 0.7;
            margin-bottom: var(--spacing-md);
        }

        .smart-schedule-empty p {
            margin: 0 0 var(--spacing-md) 0;
            opacity: 0.85;
        }

        .smart-schedule-empty .btn-primary {
            background: white !important;
            color: var(--primary) !important;
        }

        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: var(--spacing-xl);
        }

        .subjects-mini-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: var(--spacing-md);
        }

        .subject-mini-card {
            display: block;
            padding: var(--spacing-md);
            background: var(--bg-secondary);
            border-radius: var(--radius-lg);
            text-decoration: none;
            border-left: 3px solid var(--subject-color);
            transition: all var(--transition-fast);
        }

        .subject-mini-card:hover {
            background: var(--bg-tertiary);
            transform: translateX(2px);
        }

        .subject-mini-header {
            display: flex;
            align-items: center;
            gap: var(--spacing-sm);
            margin-bottom: var(--spacing-sm);
        }

        .subject-mini-color {
            width: 10px;
            height: 10px;
            background: var(--subject-color);
            border-radius: 50%;
        }

        .subject-mini-name {
            font-weight: 500;
            color: var(--text-primary);
            font-size: 0.875rem;
        }

        .subject-mini-progress .progress-bar {
            height: 4px;
            margin-bottom: 0.25rem;
        }

        .subject-mini-progress .progress-text {
            font-size: 0.6875rem;
            color: var(--text-secondary);
        }

        .stat-warning {
            border: 1px solid #fbbf24;
        }

        .task-deadline.urgent {
            color: var(--warning);
            font-weight: 500;
        }

        .task-item.overdue {
            background: #fef2f2;
        }

        .tasks-list {
            display: flex;
            flex-direction: column;
            gap: var(--spacing-sm);
        }

        .task-item {
            display: flex;
            align-items: center;
            gap: var(--spacing-md);
            padding: var(--spacing-md);
            background: var(--bg-secondary);
            border-radius: var(--radius-lg);
        }

        .checkbox-btn {
            background: none;
            border: none;
            cursor: pointer;
            color: var(--text-tertiary);
            padding: 0;
        }

        .checkbox-btn:hover {
            color: var(--success);
        }

        .task-info {
            flex: 1;
            min-width: 0;
        }

        .task-title {
            display: block;
            font-weight: 500;
            color: var(--text-primary);
            text-decoration: none;
            margin-bottom: 0.25rem;
        }

        .task-title:hover {
            color: var(--primary);
        }

        .task-meta {
            display: flex;
            align-items: center;
            gap: var(--spacing-md);
            font-size: 0.75rem;
        }

        .task-subject {
            color: var(--subject-color);
            font-weight: 500;
        }

        .task-deadline {
            display: flex;
            align-items: center;
            gap: 0.25rem;
            color: var(--text-secondary);
        }

        .task-deadline svg {
            width: 12px;
            height: 12px;
        }

        .task-deadline.overdue {
            color: var(--danger);
        }

        .priority-badge {
            padding: 0.25rem 0.5rem;
            border-radius: var(--radius-sm);
            font-size: 0.6875rem;
            font-weight: 600;
        }

        .priority-1 { background: #fee2e2; color: #dc2626; }
        .priority-2 { background: #fef3c7; color: #d97706; }
        .priority-3 { background: #dbeafe; color: #2563eb; }
        .priority-4 { background: #e0e7ff; color: #4f46e5; }
        .priority-5 { background: #f3f4f6; color: #6b7280; }

        .quick-actions {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: var(--spacing-md);
        }

        .quick-action {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: var(--spacing-sm);
            padding: var(--spacing-lg);
            background: var(--bg-secondary);
            border-radius: var(--radius-lg);
            text-decoration: none;
            transition: all var(--transition-fast);
        }

        .quick-action:hover {
            background: var(--bg-tertiary);
            transform: translateY(-2px);
        }

        .quick-action-icon {
            width: 48px;
            height: 48px;
            border-radius: var(--radius-lg);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .quick-action-icon svg {
            width: 24px;
            height: 24px;
        }

        .quick-action span {
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--text-primary);
        }

        .sessions-list {
            display: flex;
            flex-direction: column;
            gap: var(--spacing-sm);
        }

        .session-row {
            display: flex;
            align-items: center;
            gap: var(--spacing-md);
            padding: var(--spacing-md);
            background: var(--bg-secondary);
            border-radius: var(--radius-lg);
        }

        .session-color {
            width: 4px;
            height: 32px;
            border-radius: 2px;
        }

        .session-info {
            flex: 1;
        }

        .session-subject {
            display: block;
