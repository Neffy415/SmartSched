<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <style>
        .review-page {
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            position: relative;
            overflow: hidden;
        }
        .review-page::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
            pointer-events: none;
        }

        .review-container {
            max-width: 600px;
            margin: 0 auto;
            padding: var(--spacing-xl) var(--spacing-md);
            position: relative;
            z-index: 1;
        }

        /* Header */
        .review-header {
            text-align: center;
            margin-bottom: var(--spacing-xl);
            animation: fadeInDown 0.5s ease;
        }
        @keyframes fadeInDown {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: rgba(255,255,255,0.8);
            font-size: 0.875rem;
            margin-bottom: var(--spacing-md);
            text-decoration: none;
            transition: color 0.2s;
        }
        .back-link:hover { color: white; }
        .back-link svg { width: 18px; height: 18px; }
        .review-header h1 {
            font-size: 1.75rem;
            color: white;
            margin-bottom: var(--spacing-md);
            text-shadow: 0 2px 10px rgba(0,0,0,0.2);
        }

        /* Progress */
        .progress-section {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: var(--spacing-md);
        }
        .progress-track {
            flex: 1;
            max-width: 280px;
            height: 8px;
            background: rgba(255,255,255,0.2);
            border-radius: 100px;
            overflow: hidden;
            backdrop-filter: blur(10px);
        }
        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #fbbf24, #f59e0b);
            border-radius: 100px;
            transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 0 20px rgba(251, 191, 36, 0.5);
        }
        .progress-text {
            color: white;
            font-size: 0.9375rem;
            font-weight: 600;
            min-width: 50px;
            text-align: center;
        }

        /* Flashcard */
        .flashcard-stage {
            perspective: 2000px;
            margin-bottom: var(--spacing-xl);
        }
        .flashcard-container {
            position: relative;
            width: 100%;
            height: 340px;
            cursor: pointer;
            transform-style: preserve-3d;
            transition: transform 0.7s cubic-bezier(0.4, 0.2, 0.2, 1);
            animation: cardEntrance 0.6s ease;
        }
        @keyframes cardEntrance {
            from { 
                opacity: 0; 
                transform: scale(0.8) rotateX(10deg); 
            }
            to { 
                opacity: 1; 
                transform: scale(1) rotateX(0); 
            }
        }
        .flashcard-container.flipped {
            transform: rotateY(180deg);
        }
        .flashcard-container:hover:not(.flipped) {
            transform: rotateX(5deg) scale(1.02);
        }

        .card-face {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            -webkit-backface-visibility: hidden;
            border-radius: 24px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: var(--spacing-2xl);
            box-sizing: border-box;
            overflow: hidden;
        }

        /* Front Face - Clean White */
        .card-front {
            background: linear-gradient(145deg, #ffffff, #f8fafc);
            box-shadow: 
                0 25px 50px -12px rgba(0, 0, 0, 0.25),
                0 0 0 1px rgba(255, 255, 255, 0.2),
                inset 0 1px 0 rgba(255, 255, 255, 1);
        }
        .card-front::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
            background: linear-gradient(90deg, #667eea, #764ba2);
            border-radius: 24px 24px 0 0;
        }
        .card-front::after {
            content: '';
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 4px;
            background: var(--gray-200);
            border-radius: 2px;
        }

        /* Back Face - Gradient */
        .card-back {
            background: linear-gradient(145deg, #1e293b, #0f172a);
            transform: rotateY(180deg);
            box-shadow: 
                0 25px 50px -12px rgba(0, 0, 0, 0.4),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
        }
        .card-back::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
            background: linear-gradient(90deg, #10b981, #14b8a6);
            border-radius: 24px 24px 0 0;
        }
        .card-back::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23ffffff' fill-opacity='0.03' fill-rule='evenodd'%3E%3Cpath d='M0 40L40 0H20L0 20M40 40V20L20 40'/%3E%3C/g%3E%3C/svg%3E");
            pointer-events: none;
        }

        /* Card Labels */
        .card-label {
            position: absolute;
            top: 20px;
            left: 24px;
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.1em;
        }
        .card-front .card-label {
            color: #667eea;
        }
        .card-back .card-label {
            color: #10b981;
        }
        .card-label svg { width: 14px; height: 14px; }

        /* Card Number Badge */
        .card-number {
            position: absolute;
            top: 20px;
            right: 24px;
            width: 32px;
            height: 32px;
            background: var(--gray-100);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.75rem;
            font-weight: 700;
            color: var(--gray-600);
        }
        .card-back .card-number {
            background: rgba(255,255,255,0.1);
            color: rgba(255,255,255,0.6);
        }

        /* Card Content */
        .card-content {
            position: relative;
            z-index: 1;
            max-width: 100%;
            text-align: center;
        }
        .card-text {
            font-size: 1.375rem;
            line-height: 1.6;
            font-weight: 500;
            word-wrap: break-word;
        }
        .card-front .card-text {
            color: var(--gray-800);
        }
        .card-back .card-text {
            color: white;
        }

        /* Flip Hint */
        .flip-hint {
            position: absolute;
            bottom: 24px;
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.8125rem;
            animation: pulse 2s ease-in-out infinite;
        }
        @keyframes pulse {
            0%, 100% { opacity: 0.5; }
            50% { opacity: 1; }
        }
        .card-front .flip-hint {
            color: var(--gray-400);
        }
        .card-back .flip-hint {
            color: rgba(255,255,255,0.5);
        }
        .flip-hint svg { width: 18px; height: 18px; }
        .flip-icon {
            display: inline-flex;
            animation: rotateHint 3s ease-in-out infinite;
        }
        @keyframes rotateHint {
            0%, 100% { transform: rotateY(0deg); }
            50% { transform: rotateY(180deg); }
        }

        /* Rating Buttons */
        .rating-section {
            opacity: 0;
            transform: translateY(20px);
            pointer-events: none;
            transition: all 0.4s ease;
        }
        .rating-section.visible {
            opacity: 1;
            transform: translateY(0);
            pointer-events: all;
        }
        .rating-label {
            text-align: center;
            color: rgba(255,255,255,0.8);
            font-size: 0.875rem;
            margin-bottom: var(--spacing-md);
        }
        .rating-buttons {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: var(--spacing-sm);
        }
        .rating-btn {
            background: rgba(255,255,255,0.1);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255,255,255,0.2);
            border-radius: 16px;
            padding: var(--spacing-md) var(--spacing-sm);
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            text-align: center;
        }
        .rating-btn:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        }
        .rating-btn:active {
            transform: translateY(-2px);
        }
        .rating-emoji {
            font-size: 2rem;
            display: block;
            margin-bottom: 0.375rem;
            transition: transform 0.3s;
        }
        .rating-btn:hover .rating-emoji {
            transform: scale(1.2);
        }
        .rating-name {
            font-size: 0.8125rem;
            font-weight: 600;
            color: white;
            display: block;
        }
        .rating-interval {
            font-size: 0.6875rem;
            color: rgba(255,255,255,0.6);
            margin-top: 2px;
        }

        /* Rating button colors on hover */
        .rating-btn.again:hover { 
            background: rgba(239, 68, 68, 0.3); 
            border-color: #ef4444; 
        }
        .rating-btn.hard:hover { 
            background: rgba(245, 158, 11, 0.3); 
            border-color: #f59e0b; 
        }
        .rating-btn.good:hover { 
            background: rgba(16, 185, 129, 0.3); 
            border-color: #10b981; 
        }
        .rating-btn.easy:hover { 
            background: rgba(59, 130, 246, 0.3); 
            border-color: #3b82f6; 
        }

        /* Keyboard Hints */
        .keyboard-hints {
            display: flex;
            justify-content: center;
            gap: var(--spacing-md);
            margin-top: var(--spacing-lg);
            flex-wrap: wrap;
        }
        .key-hint {
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 0.75rem;
            color: rgba(255,255,255,0.5);
        }
        .key-hint kbd {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            min-width: 24px;
            height: 24px;
            padding: 0 6px;
            background: rgba(255,255,255,0.15);
            border: 1px solid rgba(255,255,255,0.2);
            border-radius: 6px;
            font-family: inherit;
            font-size: 0.6875rem;
            font-weight: 600;
            color: white;
        }

        /* Completion Screen */
        .completion-screen {
            display: none;
            text-align: center;
            animation: fadeInUp 0.6s ease;
        }
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .completion-screen.show { display: block; }
        
        .trophy-container {
            position: relative;
            width: 120px;
            height: 120px;
            margin: 0 auto var(--spacing-xl);
        }
        .trophy-glow {
            position: absolute;
            inset: -20px;
            background: radial-gradient(circle, rgba(251, 191, 36, 0.4) 0%, transparent 70%);
            animation: glowPulse 2s ease-in-out infinite;
        }
        @keyframes glowPulse {
            0%, 100% { transform: scale(1); opacity: 0.5; }
            50% { transform: scale(1.2); opacity: 1; }
        }
        .trophy-icon {
            position: relative;
            width: 120px;
            height: 120px;
            background: linear-gradient(145deg, #fbbf24, #f59e0b);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 20px 40px rgba(251, 191, 36, 0.4);
        }
        .trophy-icon svg {
            width: 60px;
            height: 60px;
            color: white;
        }

        .completion-screen h2 {
            font-size: 2rem;
            color: white;
            margin-bottom: var(--spacing-sm);
        }
        .completion-screen .subtitle {
            color: rgba(255,255,255,0.7);
            font-size: 1rem;
            margin-bottom: var(--spacing-xl);
        }

        .stats-cards {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: var(--spacing-md);
            margin-bottom: var(--spacing-xl);
        }
        .stat-card {
            background: rgba(255,255,255,0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.2);
            border-radius: 16px;
            padding: var(--spacing-lg);
        }
        .stat-card-value {
            font-size: 2.5rem;
            font-weight: 800;
            line-height: 1;
            margin-bottom: 0.25rem;
        }
        .stat-card-value.correct { color: #10b981; }
        .stat-card-value.incorrect { color: #f59e0b; }
        .stat-card-label {
            font-size: 0.8125rem;
            color: rgba(255,255,255,0.7);
        }

        .completion-actions {
            display: flex;
            gap: var(--spacing-md);
            justify-content: center;
            flex-wrap: wrap;
        }
        .completion-actions .btn {
            padding: 0.875rem 1.5rem;
            border-radius: 12px;
            font-weight: 600;
        }
        .btn-white {
            background: white;
            color: var(--gray-800);
        }
        .btn-white:hover {
            background: var(--gray-100);
        }
        .btn-outline-white {
            background: transparent;
            color: white;
            border: 2px solid rgba(255,255,255,0.3);
        }
        .btn-outline-white:hover {
            background: rgba(255,255,255,0.1);
            border-color: rgba(255,255,255,0.5);
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: var(--spacing-2xl);
            animation: fadeInUp 0.6s ease;
        }
        .empty-icon-container {
            width: 100px;
            height: 100px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto var(--spacing-lg);
        }
        .empty-icon-container svg {
            width: 50px;
            height: 50px;
            color: rgba(255,255,255,0.8);
        }
        .empty-state h2 {
            font-size: 1.5rem;
            color: white;
            margin-bottom: var(--spacing-sm);
        }
        .empty-state p {
            color: rgba(255,255,255,0.7);
            margin-bottom: var(--spacing-xl);
        }

        /* Confetti animation for completion */
        .confetti {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1000;
        }
        .confetti-piece {
            position: absolute;
            width: 10px;
            height: 10px;
            background: #fbbf24;
            animation: confettiFall 3s ease-out forwards;
        }
        @keyframes confettiFall {
            0% { transform: translateY(-100vh) rotate(0deg); opacity: 1; }
            100% { transform: translateY(100vh) rotate(720deg); opacity: 0; }
        }

        /* Responsive */
        @media (max-width: 480px) {
            .flashcard-container { height: 280px; }
            .card-text { font-size: 1.125rem; }
            .rating-buttons { grid-template-columns: repeat(2, 1fr); }
            .completion-screen h2 { font-size: 1.5rem; }
        }
    </style>
</head>
<body>
    <div class="review-page">
        <div class="review-container">
            <% if (cards.length === 0) { %>
            <div class="empty-state">
                <div class="empty-icon-container">
                    <i data-lucide="check-circle"></i>
                </div>
                <h2>All Caught Up! üéâ</h2>
                <p>No cards are due for review right now.<br>Great job staying on top of your studies!</p>
                <a href="/flashcards" class="btn btn-white">
                    <i data-lucide="arrow-left"></i> Back to Flashcards
                </a>
            </div>
            <% } else { %>
            
            <!-- Header -->
            <div class="review-header">
                <a href="/flashcards" class="back-link">
                    <i data-lucide="arrow-left"></i>
                    Back to Flashcards
                </a>
                <h1><%= mode === 'daily' ? 'üìö Daily Review' : (typeof set !== 'undefined' ? set.title : 'Review Session') %></h1>
                <div class="progress-section">
                    <div class="progress-track">
                        <div class="progress-fill" id="progressFill" style="width: 0%"></div>
                    </div>
                    <span class="progress-text"><span id="currentIndex">1</span>/<%= cards.length %></span>
                </div>
            </div>

            <!-- Review Area -->
            <div id="reviewArea">
                <!-- Flashcard -->
                <div class="flashcard-stage">
                    <div class="flashcard-container" id="flashcard" onclick="flipCard()">
                        <!-- Front -->
                        <div class="card-face card-front">
                            <span class="card-label">
                                <i data-lucide="help-circle"></i>
                                Question
                            </span>
                            <span class="card-number" id="cardNumber">1</span>
                            <div class="card-content">
                                <div class="card-text" id="cardFront"></div>
                            </div>
                            <span class="flip-hint">
                                <span class="flip-icon"><i data-lucide="rotate-3d"></i></span>
                                Tap to reveal answer
                            </span>
                        </div>
                        <!-- Back -->
                        <div class="card-face card-back">
                            <span class="card-label">
                                <i data-lucide="check-circle"></i>
                                Answer
                            </span>
                            <span class="card-number" id="cardNumberBack">1</span>
                            <div class="card-content">
                                <div class="card-text" id="cardBack"></div>
                            </div>
                            <span class="flip-hint">
                                <i data-lucide="star"></i>
                                Rate your recall below
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Rating -->
                <div class="rating-section" id="ratingSection">
                    <p class="rating-label">How well did you remember?</p>
                    <div class="rating-buttons">
                        <button class="rating-btn again" onclick="rateCard(1)">
                            <span class="rating-emoji">üòì</span>
                            <span class="rating-name">Again</span>
                            <span class="rating-interval">&lt;1 day</span>
                        </button>
                        <button class="rating-btn hard" onclick="rateCard(2)">
                            <span class="rating-emoji">üòê</span>
                            <span class="rating-name">Hard</span>
                            <span class="rating-interval" id="hardInterval">~2 days</span>
                        </button>
                        <button class="rating-btn good" onclick="rateCard(3)">
                            <span class="rating-emoji">üôÇ</span>
                            <span class="rating-name">Good</span>
                            <span class="rating-interval" id="goodInterval">~4 days</span>
                        </button>
                        <button class="rating-btn easy" onclick="rateCard(4)">
                            <span class="rating-emoji">üòä</span>
                            <span class="rating-name">Easy</span>
                            <span class="rating-interval" id="easyInterval">~7 days</span>
                        </button>
                    </div>
                </div>

                <!-- Keyboard Hints -->
                <div class="keyboard-hints">
                    <span class="key-hint"><kbd>Space</kbd> Flip card</span>
                    <span class="key-hint"><kbd>1</kbd>-<kbd>4</kbd> Rate</span>
                </div>
            </div>

            <!-- Completion Screen -->
            <div class="completion-screen" id="completionScreen">
                <div class="trophy-container">
                    <div class="trophy-glow"></div>
                    <div class="trophy-icon">
                        <i data-lucide="trophy"></i>
                    </div>
                </div>
                <h2>Session Complete! üéâ</h2>
                <p class="subtitle">You've reviewed all cards. Keep up the great work!</p>
                
                <div class="stats-cards">
                    <div class="stat-card">
                        <div class="stat-card-value correct" id="correctCount">0</div>
                        <div class="stat-card-label">Remembered</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-card-value incorrect" id="incorrectCount">0</div>
                        <div class="stat-card-label">Need Practice</div>
                    </div>
                </div>

                <div class="completion-actions">
                    <a href="/flashcards" class="btn btn-outline-white">
                        <i data-lucide="arrow-left"></i> Back
                    </a>
                    <button class="btn btn-white" onclick="restartReview()">
                        <i data-lucide="refresh-cw"></i> Review Again
                    </button>
                </div>
            </div>

            <% } %>
        </div>
    </div>

    <script>
        lucide.createIcons();

        <% if (cards.length > 0) { %>
        const cards = <%- JSON.stringify(cards) %>;
        let currentIndex = 0;
        let isFlipped = false;
        let correctCount = 0;
        let incorrectCount = 0;

        function showCard() {
            const card = cards[currentIndex];
            document.getElementById('cardFront').textContent = card.front_text;
            document.getElementById('cardBack').textContent = card.back_text;
            document.getElementById('cardNumber').textContent = currentIndex + 1;
            document.getElementById('cardNumberBack').textContent = currentIndex + 1;
            
            // Reset flip state with animation
            const flashcard = document.getElementById('flashcard');
            flashcard.style.animation = 'none';
            flashcard.offsetHeight; // Trigger reflow
            flashcard.style.animation = 'cardEntrance 0.5s ease';
            flashcard.classList.remove('flipped');
            
            document.getElementById('ratingSection').classList.remove('visible');
            document.getElementById('currentIndex').textContent = currentIndex + 1;
            
            const progress = (currentIndex / cards.length) * 100;
            document.getElementById('progressFill').style.width = progress + '%';

            // Calculate interval estimates based on SM-2
            const ef = parseFloat(card.ease_factor) || 2.5;
            const interval = parseInt(card.interval_days) || 1;
            document.getElementById('hardInterval').textContent = '~' + Math.max(1, Math.round(interval * 1.2)) + 'd';
            document.getElementById('goodInterval').textContent = '~' + Math.round(interval * ef) + 'd';
            document.getElementById('easyInterval').textContent = '~' + Math.round(interval * ef * 1.3) + 'd';

            isFlipped = false;
            lucide.createIcons();
        }

        function flipCard() {
            const flashcard = document.getElementById('flashcard');
            if (!isFlipped) {
                flashcard.classList.add('flipped');
                setTimeout(() => {
                    document.getElementById('ratingSection').classList.add('visible');
                }, 300);
                isFlipped = true;
            }
        }

        async function rateCard(rating) {
            const card = cards[currentIndex];
            
            // Track correct/incorrect
            if (rating >= 3) {
                correctCount++;
            } else {
                incorrectCount++;
            }

            // Send rating to server
            try {
                await fetch('/flashcards/review', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        card_id: card.id,
                        rating: rating
                    })
                });
            } catch (error) {
                console.error('Error saving review:', error);
            }

            // Move to next card
            currentIndex++;

            if (currentIndex >= cards.length) {
                showCompletion();
            } else {
                showCard();
            }
        }

        function showCompletion() {
            document.getElementById('reviewArea').style.display = 'none';
            document.getElementById('correctCount').textContent = correctCount;
            document.getElementById('incorrectCount').textContent = incorrectCount;
            document.getElementById('completionScreen').classList.add('show');
            document.getElementById('progressFill').style.width = '100%';
            
            // Trigger confetti
            createConfetti();
        }

        function createConfetti() {
            const colors = ['#fbbf24', '#10b981', '#3b82f6', '#ec4899', '#8b5cf6'];
            const container = document.createElement('div');
            container.className = 'confetti';
            document.body.appendChild(container);

            for (let i = 0; i < 50; i++) {
                const piece = document.createElement('div');
                piece.className = 'confetti-piece';
                piece.style.left = Math.random() * 100 + '%';
                piece.style.background = colors[Math.floor(Math.random() * colors.length)];
                piece.style.animationDelay = Math.random() * 0.5 + 's';
                piece.style.animationDuration = (2 + Math.random() * 2) + 's';
                container.appendChild(piece);
            }

            setTimeout(() => container.remove(), 4000);
        }

        function restartReview() {
            currentIndex = 0;
            correctCount = 0;
            incorrectCount = 0;
            document.getElementById('reviewArea').style.display = 'block';
            document.getElementById('completionScreen').classList.remove('show');
            showCard();
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            if (e.code === 'Space') {
                e.preventDefault();
                flipCard();
            } else if (isFlipped && e.key >= '1' && e.key <= '4') {
                rateCard(parseInt(e.key));
            }
        });

        // Initialize
        showCard();
        <% } %>
    </script>
