<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>
    
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <div class="app-container">
        <%- include('../partials/sidebar') %>

        <main class="main-content">
            <%- include('../partials/topbar') %>

            <div class="page-content">
                <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
                    <div class="alert alert-success animate-fade-in">
                        <i data-lucide="check-circle"></i>
                        <p><%= success_msg %></p>
                    </div>
                <% } %>

                <!-- Breadcrumb -->
                <nav class="breadcrumb">
                    <a href="/subjects">Subjects</a>
                    <i data-lucide="chevron-right"></i>
                    <a href="/subjects/<%= task.subject_id %>"><%= task.subject_name %></a>
                    <i data-lucide="chevron-right"></i>
                    <a href="/topics/<%= task.topic_id %>"><%= task.topic_name %></a>
                    <i data-lucide="chevron-right"></i>
                    <span><%= task.title %></span>
                </nav>

                <!-- Task Header -->
                <div class="task-header" style="--task-color: <%= task.subject_color %>">
                    <div class="task-header-info">
                        <div class="task-badges">
                            <span class="priority-badge priority-<%= task.priority %>">P<%= task.priority %></span>
                            <span class="task-type-badge <%= task.task_type %>"><%= task.task_type %></span>
                            <span class="status-badge status-<%= task.status %>">
                                <%= task.status.replace('_', ' ') %>
                            </span>
                            <% if (task.deadline && new Date(task.deadline) < new Date() && task.status !== 'completed') { %>
                                <span class="status-badge overdue">
                                    <i data-lucide="alert-triangle"></i> Overdue
                                </span>
                            <% } %>
                        </div>
                        <h1><%= task.title %></h1>
                        <% if (task.description) { %>
                            <p class="task-description"><%= task.description %></p>
                        <% } %>
                        <div class="task-subject-info">
                            <span class="subject-tag" style="--subject-color: <%= task.subject_color %>">
                                <i data-lucide="book"></i>
                                <%= task.subject_name %> / <%= task.topic_name %>
                            </span>
                        </div>
                    </div>
                    <div class="task-header-actions">
                        <% if (task.status !== 'completed') { %>
                            <a href="/study/start?task=<%= task.id %>" class="btn btn-primary">
                                <i data-lucide="play"></i>
                                Start Session
                            </a>
                        <% } %>
                        <a href="/tasks/<%= task.id %>/edit" class="btn btn-secondary">
                            <i data-lucide="edit"></i>
                            Edit
                        </a>
                    </div>
                </div>

                <div class="content-grid">
                    <!-- Task Details -->
                    <div class="card">
                        <div class="card-header">
                            <h3>
                                <i data-lucide="info"></i>
                                Task Details
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="details-grid">
                                <div class="detail-item">
                                    <span class="detail-label">Estimated Time</span>
                                    <span class="detail-value">
                                        <i data-lucide="clock"></i>
                                        <%= task.estimated_minutes %> minutes
                                    </span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Actual Time</span>
                                    <span class="detail-value">
                                        <i data-lucide="timer"></i>
                                        <%= task.actual_minutes || 0 %> minutes
                                    </span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Deadline</span>
                                    <span class="detail-value">
                                        <i data-lucide="calendar"></i>
                                        <%= task.deadline ? new Date(task.deadline).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) : 'No deadline set' %>
                                    </span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Created</span>
                                    <span class="detail-value">
                                        <i data-lucide="plus-circle"></i>
                                        <%= new Date(task.created_at).toLocaleDateString() %>
                                    </span>
                                </div>
                                <% if (task.completed_at) { %>
                                    <div class="detail-item">
                                        <span class="detail-label">Completed</span>
                                        <span class="detail-value text-success">
                                            <i data-lucide="check-circle"></i>
                                            <%= new Date(task.completed_at).toLocaleDateString() %>
                                        </span>
                                    </div>
                                <% } %>
                            </div>

                            <!-- Status Actions -->
                            <div class="status-actions">
                                <h4>Change Status</h4>
                                <div class="status-buttons">
                                    <form action="/tasks/<%= task.id %>/status" method="POST" style="display: inline;">
                                        <input type="hidden" name="status" value="pending">
                                        <button type="submit" class="btn <%= task.status === 'pending' ? 'btn-primary' : 'btn-secondary' %> btn-sm">
                                            <i data-lucide="circle"></i>
                                            Pending
                                        </button>
                                    </form>
                                    <form action="/tasks/<%= task.id %>/status" method="POST" style="display: inline;">
                                        <input type="hidden" name="status" value="in_progress">
                                        <button type="submit" class="btn <%= task.status === 'in_progress' ? 'btn-primary' : 'btn-secondary' %> btn-sm">
                                            <i data-lucide="loader"></i>
                                            In Progress
                                        </button>
                                    </form>
                                    <form action="/tasks/<%= task.id %>/status" method="POST" style="display: inline;">
                                        <input type="hidden" name="status" value="completed">
                                        <button type="submit" class="btn <%= task.status === 'completed' ? 'btn-primary' : 'btn-secondary' %> btn-sm">
                                            <i data-lucide="check-circle"></i>
                                            Completed
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Study Sessions -->
                    <div class="sidebar-content">
                        <div class="card">
                            <div class="card-header">
                                <h3>
                                    <i data-lucide="history"></i>
                                    Study Sessions
                                </h3>
                            </div>
                            <div class="card-body">
                                <% if (sessions.length === 0) { %>
                                    <div class="empty-state small">
                                        <i data-lucide="clock"></i>
                                        <p>No sessions yet</p>
                                        <a href="/study/start?task=<%= task.id %>" class="btn btn-primary btn-sm">
                                            <i data-lucide="play"></i>
                                            Start First Session
                                        </a>
                                    </div>
                                <% } else { %>
                                    <div class="sessions-list">
                                        <% sessions.forEach(session => { %>
                                            <div class="session-item">
                                                <div class="session-icon">
                                                    <i data-lucide="book-open"></i>
                                                </div>
                                                <div class="session-info">
                                                    <span class="session-duration"><%= session.actual_minutes || 0 %> minutes</span>
                                                    <span class="session-time">
                                                        <%= new Date(session.start_time).toLocaleDateString('en-US', { month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
                                                    </span>
                                                </div>
                                                <% if (session.quality_rating) { %>
                                                    <div class="session-rating">
                                                        <% for (let i = 1; i <= 5; i++) { %>
                                                            <i data-lucide="star" class="<%= i <= session.quality_rating ? 'filled' : '' %>"></i>
                                                        <% } %>
                                                    </div>
                                                <% } %>
                                            </div>
                                        <% }); %>
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <!-- Danger Zone -->
                        <div class="card card-danger">
                            <div class="card-header">
                                <h3>
                                    <i data-lucide="alert-triangle"></i>
                                    Danger Zone
                                </h3>
                            </div>
                            <div class="card-body">
                                <p>Deleting this task will remove all associated data.</p>
                                <form action="/tasks/<%= task.id %>/delete" method="POST"
                                      onsubmit="return confirm('Are you sure you want to delete this task? This action cannot be undone.')">
                                    <button type="submit" class="btn btn-danger btn-block">
                                        <i data-lucide="trash-2"></i>
                                        Delete Task
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        lucide.createIcons();

        const menuToggle = document.getElementById('menuToggle');
        const sidebar = document.querySelector('.sidebar');
        if (menuToggle) {
            menuToggle.addEventListener('click', () => sidebar.classList.toggle('open'));
        }
    </script>
</body>
</html>
