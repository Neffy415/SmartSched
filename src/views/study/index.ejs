<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>
    
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <div class="app-container">
        <%- include('../partials/sidebar') %>

        <main class="main-content">
            <%- include('../partials/topbar') %>

            <div class="page-content">
                <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
                    <div class="alert alert-success animate-fade-in">
                        <i data-lucide="check-circle"></i>
                        <p><%= success_msg %></p>
                    </div>
                <% } %>
                <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
                    <div class="alert alert-error animate-fade-in">
                        <i data-lucide="alert-circle"></i>
                        <p><%= error_msg %></p>
                    </div>
                <% } %>

                <!-- Page Header -->
                <div class="page-header">
                    <div class="page-header-content">
                        <h1>Study Sessions</h1>
                        <p>Track your study time and build consistency</p>
                    </div>
                    <a href="/study/start" class="btn btn-primary btn-lg">
                        <i data-lucide="play"></i>
                        Start Studying
                    </a>
                </div>

                <% if (activeSession) { %>
                    <!-- Active Session Alert -->
                    <div class="active-session-banner animate-pulse-border">
                        <div class="banner-content">
                            <div class="banner-icon">
                                <i data-lucide="loader" class="spinning"></i>
                            </div>
                            <div class="banner-info">
                                <h3>Active Session in Progress</h3>
                                <p>
                                    <span style="--subject-color: <%= activeSession.subject_color %>">
                                        <%= activeSession.subject_name %> / <%= activeSession.topic_name %>
                                    </span>
                                    <% if (activeSession.task_title) { %>
                                        - <%= activeSession.task_title %>
                                    <% } %>
                                </p>
                            </div>
                        </div>
                        <a href="/study/active/<%= activeSession.id %>" class="btn btn-primary">
                            <i data-lucide="arrow-right"></i>
                            Continue Session
                        </a>
                    </div>
                <% } %>

                <!-- Stats Overview -->
                <div class="stats-grid stats-grid-4">
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #10b981, #14b8a6);">
                            <i data-lucide="clock"></i>
                        </div>
                        <div class="stat-content">
                            <span class="stat-value"><%= Math.round(todayStats.total_minutes) %></span>
                            <span class="stat-label">Minutes Today</span>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #3b82f6, #6366f1);">
                            <i data-lucide="zap"></i>
                        </div>
                        <div class="stat-content">
                            <span class="stat-value"><%= todayStats.session_count %></span>
                            <span class="stat-label">Sessions Today</span>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b, #f97316);">
                            <i data-lucide="calendar"></i>
                        </div>
                        <div class="stat-content">
                            <span class="stat-value"><%= Math.round(weeklyStats.total_minutes) %></span>
                            <span class="stat-label">Minutes This Week</span>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #8b5cf6, #a855f7);">
                            <i data-lucide="target"></i>
                        </div>
                        <div class="stat-content">
                            <span class="stat-value"><%= Math.round(weeklyStats.avg_minutes) %></span>
                            <span class="stat-label">Avg per Session</span>
                        </div>
                    </div>
                </div>

                <div class="content-grid">
                    <!-- Quick Start -->
                    <div class="card">
                        <div class="card-header">
                            <h3>
                                <i data-lucide="zap"></i>
                                Quick Start
                            </h3>
                        </div>
                        <div class="card-body">
                            <% if (subjects.length === 0) { %>
                                <div class="empty-state">
                                    <div class="empty-icon">
                                        <i data-lucide="book-plus"></i>
                                    </div>
                                    <h4>No subjects yet</h4>
                                    <p>Create a subject and topics first to start studying</p>
                                    <a href="/subjects/new" class="btn btn-primary btn-sm">
                                        <i data-lucide="plus"></i>
                                        Add Subject
                                    </a>
                                </div>
                            <% } else { %>
                                <div class="quick-start-grid">
                                    <% subjects.forEach(subject => { %>
                                        <% if (subject.topics && subject.topics[0] && subject.topics[0].id) { %>
                                            <div class="quick-start-card" style="--subject-color: <%= subject.color %>">
                                                <h4><%= subject.name %></h4>
                                                <div class="quick-topics">
                                                    <% subject.topics.slice(0, 3).forEach(topic => { %>
                                                        <% if (topic && topic.id) { %>
                                                            <a href="/study/start?topic=<%= topic.id %>" class="quick-topic">
                                                                <i data-lucide="play-circle"></i>
                                                                <%= topic.name %>
                                                            </a>
                                                        <% } %>
                                                    <% }); %>
                                                    <% if (subject.topics.length > 3) { %>
                                                        <a href="/subjects/<%= subject.id %>" class="view-more">
                                                            +<%= subject.topics.length - 3 %> more
                                                        </a>
                                                    <% } %>
                                                </div>
                                            </div>
                                        <% } %>
                                    <% }); %>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Recent Sessions -->
                    <div class="card">
                        <div class="card-header">
                            <h3>
                                <i data-lucide="history"></i>
                                Recent Sessions
                            </h3>
                            <a href="/study/history" class="btn btn-secondary btn-sm">
                                View All
                            </a>
                        </div>
                        <div class="card-body">
                            <% if (recentSessions.length === 0) { %>
                                <div class="empty-state">
                                    <div class="empty-icon">
                                        <i data-lucide="book-open"></i>
                                    </div>
                                    <h4>No sessions yet</h4>
                                    <p>Start your first study session to see it here</p>
                                </div>
                            <% } else { %>
                                <div class="sessions-list">
                                    <% recentSessions.slice(0, 10).forEach(session => { %>
                                        <div class="session-row">
                                            <div class="session-color" style="background: <%= session.subject_color %>"></div>
                                            <div class="session-info">
                                                <span class="session-subject"><%= session.subject_name %> / <%= session.topic_name %></span>
                                                <% if (session.task_title) { %>
                                                    <span class="session-task"><%= session.task_title %></span>
                                                <% } %>
                                            </div>
                                            <div class="session-duration">
                                                <i data-lucide="clock"></i>
                                                <%= session.actual_minutes %> min
                                            </div>
                                            <div class="session-date">
                                                <%= new Date(session.start_time).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %>
                                            </div>
                                            <% if (session.quality_rating) { %>
                                                <div class="session-rating">
                                                    <% for (let i = 1; i <= 5; i++) { %>
                                                        <i data-lucide="star" class="star <%= i <= session.quality_rating ? 'filled' : '' %>"></i>
                                                    <% } %>
                                                </div>
                                            <% } %>
                                        </div>
                                    <% }); %>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        lucide.createIcons();

        const menuToggle = document.getElementById('menuToggle');
        const sidebar = document.querySelector('.sidebar');
        if (menuToggle) {
            menuToggle.addEventListener('click', () => sidebar.classList.toggle('open'));
        }
    </script>
</body>
</html>
