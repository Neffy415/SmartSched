<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>
    
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <style>
        .timer-page {
            min-height: calc(100vh - 80px);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .timer-container {
            text-align: center;
            max-width: 500px;
            width: 100%;
        }

        .session-subject {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: var(--subject-color);
            color: white;
            border-radius: var(--radius-full);
            font-weight: 500;
            margin-bottom: 1rem;
        }

        .session-topic {
            font-size: 1.5rem;
            color: var(--text-primary);
            margin-bottom: 0.5rem;
        }

        .session-task {
            color: var(--text-secondary);
            margin-bottom: 2rem;
        }

        .timer-display {
            background: var(--surface);
            border-radius: var(--radius-xl);
            padding: 3rem;
            margin-bottom: 2rem;
            box-shadow: var(--shadow-lg);
        }

        .timer-time {
            font-size: 5rem;
            font-weight: 700;
            color: var(--text-primary);
            font-variant-numeric: tabular-nums;
            line-height: 1;
        }

        .timer-time.overtime {
            color: var(--error);
        }

        .timer-label {
            font-size: 0.875rem;
            color: var(--text-secondary);
            margin-top: 0.5rem;
        }

        .timer-planned {
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid var(--border);
        }

        .timer-planned span {
            color: var(--text-secondary);
        }

        .timer-progress {
            width: 100%;
            height: 8px;
            background: var(--bg-secondary);
            border-radius: var(--radius-full);
            overflow: hidden;
            margin-top: 1rem;
        }

        .timer-progress-bar {
            height: 100%;
            background: linear-gradient(90deg, var(--primary), var(--primary-dark));
            border-radius: var(--radius-full);
            transition: width 1s linear;
        }

        .timer-progress-bar.complete {
            background: var(--success);
        }

        .timer-progress-bar.overtime {
            background: var(--warning);
        }

        .timer-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .timer-actions .btn {
            min-width: 150px;
        }

        .stop-form {
            width: 100%;
            max-width: 500px;
            margin-top: 2rem;
        }

        .stop-form .form-group {
            margin-bottom: 1.5rem;
            text-align: left;
        }

        .quality-rating {
            display: flex;
            gap: 0.5rem;
            justify-content: center;
        }

        .quality-rating input {
            display: none;
        }

        .quality-rating label {
            cursor: pointer;
            padding: 0.75rem 1.5rem;
            background: var(--bg-secondary);
            border-radius: var(--radius-md);
            transition: all 0.2s;
            font-weight: 500;
        }

        .quality-rating label:hover {
            background: var(--primary-light);
        }

        .quality-rating input:checked + label {
            background: var(--primary);
            color: white;
        }

        .focus-mode-tip {
            margin-top: 2rem;
            padding: 1rem;
            background: var(--bg-secondary);
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: var(--text-secondary);
            font-size: 0.875rem;
        }

        .focus-mode-tip i {
            color: var(--primary);
        }

        @media (max-width: 640px) {
            .timer-time {
                font-size: 3.5rem;
            }

            .timer-display {
                padding: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="app-container">
        <%- include('../partials/sidebar') %>

        <main class="main-content">
            <div class="timer-page" style="--subject-color: <%= session.subject_color %>">
                <div class="timer-container">
                    <div class="session-subject">
                        <i data-lucide="book"></i>
                        <%= session.subject_name %>
                    </div>
                    <h1 class="session-topic"><%= session.topic_name %></h1>
                    <% if (session.task_title) { %>
                        <p class="session-task">
                            <i data-lucide="check-square"></i>
                            <%= session.task_title %>
                        </p>
                    <% } %>

                    <div class="timer-display">
                        <div class="timer-time" id="timerDisplay">00:00:00</div>
                        <div class="timer-label">Time Elapsed</div>
                        
                        <div class="timer-planned">
                            <span>Planned: <%= session.planned_minutes %> minutes</span>
                            <div class="timer-progress">
                                <div class="timer-progress-bar" id="progressBar" style="width: 0%"></div>
                            </div>
                        </div>
                    </div>

                    <div class="timer-actions" id="runningActions">
                        <button type="button" class="btn btn-primary btn-lg" onclick="showStopForm()">
                            <i data-lucide="square"></i>
                            Stop Session
                        </button>
                        <form action="/study/cancel/<%= session.id %>" method="POST" style="display: inline;"
                              onsubmit="return confirm('Cancel this session? Your time will not be saved.')">
                            <button type="submit" class="btn btn-secondary">
                                <i data-lucide="x"></i>
                                Cancel
                            </button>
                        </form>
                    </div>

                    <form action="/study/stop/<%= session.id %>" method="POST" class="stop-form" id="stopForm" style="display: none;">
                        <div class="form-group">
                            <label>How was your focus?</label>
                            <div class="quality-rating">
                                <input type="radio" name="quality_rating" value="1" id="q1">
                                <label for="q1">üò¥ Poor</label>
                                <input type="radio" name="quality_rating" value="2" id="q2">
                                <label for="q2">üòê Okay</label>
                                <input type="radio" name="quality_rating" value="3" id="q3" checked>
                                <label for="q3">üôÇ Good</label>
                                <input type="radio" name="quality_rating" value="4" id="q4">
                                <label for="q4">üòä Great</label>
                                <input type="radio" name="quality_rating" value="5" id="q5">
                                <label for="q5">üî• Excellent</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="notes">Session Notes (Optional)</label>
                            <textarea id="notes" name="notes" rows="3" 
                                      placeholder="What did you accomplish? Any insights?"></textarea>
                        </div>

                        <div class="timer-actions">
                            <button type="button" class="btn btn-secondary" onclick="hideStopForm()">
                                <i data-lucide="arrow-left"></i>
                                Continue Studying
                            </button>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i data-lucide="check"></i>
                                Complete Session
                            </button>
                        </div>
                    </form>

                    <div class="focus-mode-tip">
                        <i data-lucide="focus"></i>
                        <span>Pro tip: Minimize this tab and focus on your studies. The timer keeps running!</span>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        lucide.createIcons();

        const startTime = new Date('<%= session.start_time %>');
        const plannedMinutes = <%= session.planned_minutes %>;
        const timerDisplay = document.getElementById('timerDisplay');
        const progressBar = document.getElementById('progressBar');

        function updateTimer() {
            const now = new Date();
            const elapsed = Math.floor((now - startTime) / 1000);
            
            const hours = Math.floor(elapsed / 3600);
            const minutes = Math.floor((elapsed % 3600) / 60);
            const seconds = elapsed % 60;
            
            timerDisplay.textContent = 
                String(hours).padStart(2, '0') + ':' +
                String(minutes).padStart(2, '0') + ':' +
                String(seconds).padStart(2, '0');

            // Update progress bar
            const elapsedMinutes = elapsed / 60;
            const progress = Math.min((elapsedMinutes / plannedMinutes) * 100, 100);
            progressBar.style.width = progress + '%';

            if (elapsedMinutes >= plannedMinutes) {
                progressBar.classList.add('complete');
                if (elapsedMinutes > plannedMinutes * 1.2) {
                    timerDisplay.classList.add('overtime');
                    progressBar.classList.remove('complete');
                    progressBar.classList.add('overtime');
                }
            }

            // Update page title
            document.title = timerDisplay.textContent + ' - SmartSched';
        }

        // Update immediately and then every second
        updateTimer();
        setInterval(updateTimer, 1000);

        function showStopForm() {
            document.getElementById('runningActions').style.display = 'none';
            document.getElementById('stopForm').style.display = 'block';
        }

        function hideStopForm() {
            document.getElementById('runningActions').style.display = 'flex';
            document.getElementById('stopForm').style.display = 'none';
        }
    </script>
</body>
</html>
